            @Html.DisplayFor(modelItem => item.Unconfirmed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Confirmed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Current)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ListStatusId }, new { @class = "btn btn-warning" }) 
            @Html.ActionLink("Details", "Details", new { id=item.ListStatusId }, new { @class = "btn btn-info" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.ListStatusId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
