@model IEnumerable<BeautiesAndBarbers.Models.ListStatus>

@{
    ViewBag.Title = "List Status";
}

<h2>List Status</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { }, new { @class = "btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
